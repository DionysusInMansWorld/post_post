<li class="list-group-item container-fluid p-0 pt-2 pb-1">
  <div class="container-fluid d-flex justify-content-between m-0 p-0 ps-2 pe-2">
    <div class="d-flex justify-content-between align-items-start">
      <%= link_to "标题: #{post.title}", post_path(post), class: "text-dark fw-bold me-2" %>
      <% if post.replies.count != 0%>
        <span class="badge bg-primary rounded-pill"><%= post.replies.count %></span>
      <% end %>
    </div>
    <div>
      <%= "发布日期: #{post.created_at}" %>
    </div>
  </div>
  <hr class="m-0 mt-1 ms-2 me-2"/>
  <small class="m-0 p-0 ps-2"><%= post.content %></small>
</li>